// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int          @id @default(autoincrement())
  name      String
  email     String       @unique
  password  String
  imageUrl  String
  personage Personages[]

  @@map("users")
}

model Personages {
  id             Int            @id @default(autoincrement())
  name           String
  age            Int
  player         Boolean
  classification Classification @default(Warrior)
  imageUrl       String
  Users          Users          @relation(fields: [userId], references: [id])
  userId         Int

  @@map("personages")
}

enum Classification {
  Mage
  Warrior
  Archer
  Healer
  Hunter
}
